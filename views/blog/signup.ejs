<%- include("../partials/header"); -%>

<div class="signup">
    <div class="signup__container">
        <img class="signup__logo" src="/assets/logo.png">
        <form class="signup__form" id="signup-form">
            <div class="signup__input-container">
                <input class="signup__text-input" type="text" name="name" placeholder="Inserisci il tuo nome">
            </div>
            <div class="signup__input-container">
                <input class="signup__text-input" type="text" name="email" placeholder="Inserisci la tua email">
            </div>
            <div class="signup__input-container">
                <input class="signup__text-input" type="password" name="password" placeholder="Inserisci la tua password">
            </div>
            <div class="signup__input-container">
                <input class="signup__text-input" type="password" name="passwordConfirm" placeholder="Reinserisci la tua password">
            </div>
            <div class="signup__input-container">
                <input class="signup__submit" type="submit" value="Registrati">
            </div>
            
        </form>
    </div>
       
</div>

<%- include("../partials/footer"); -%>