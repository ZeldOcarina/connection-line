<%- include("../partials/header"); -%>

<div class="signup">
    <div class="signup__container">
        <img class="signup__logo" src="/assets/logo.png">
        <form class="signup__form" name="signup-form">
            <% if(context === 'register') { %>
            <div class="signup__input-container">
                <input class="signup__text-input" type="text" name="name" placeholder="Inserisci il tuo nome" required>
            </div>
            <% } %>
            <div class="signup__input-container">
                <input class="signup__text-input" type="text" name="email" placeholder="Inserisci la tua email" required>
            </div>
            <div class="signup__input-container">
                <input class="signup__text-input" type="password" name="password" placeholder="Inserisci la tua password" required>
            </div>
            <% if(context === 'register') { %>
                <div class="signup__input-container">
                    <input class="signup__text-input" type="password" name="passwordConfirm" placeholder="Reinserisci la tua password" required>
                </div>
            <% } %>
            <div class="signup__input-container">
                <input class="signup__submit" type="submit" value="<%= context === 'login' ? 'Login' : 'Registrati' %>">
            </div>
            <% if(context === 'login') { %>
                <div class="signup__input-container mt-3">
                    <span>Non sei ancora registrato? <a href="/register">Registrati subito!</a></span>
                    <div class="pt-1"><a href="/user/password-forget">Hai dimenticato la tua password?</a></div>
                </div>
            <% } %>
        </form>

    </div>
       
</div>

<%- include("../partials/footer"); -%>