<%- include("../partials/header"); -%>

<div class="signup">
    <div class="signup__container">
        <img class="signup__logo" src="/assets/logo.png">
        <form class="password-reset__form" name="password-reset-form">
            <div class="signup__input-container">
                <input class="signup__text-input" type="email" name="email" placeholder="Inserisci la tua Email" required>
            </div>
            <div class="signup__input-container">
                <input class="signup__text-input" type="password" name="password" placeholder="Inserisci la tua nuova password" required>
            </div>
            
            <div class="signup__input-container">
                <input class="signup__text-input" type="password" name="passwordConfirm" placeholder="Conferma la tua nuova password" required>
            </div>
            <div class="signup__input-container">
                <input class="signup__submit" type="submit" value="Reimposta la password">
            </div>
            <div class="signup__input-container mt-3">
                <span>Inserisci la tua email e la tua nuova password!</span>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer"); -%>