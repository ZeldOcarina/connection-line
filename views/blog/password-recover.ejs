<%- include("../partials/header"); -%>

<div class="signup">
    <div class="signup__container">
        <img class="signup__logo" src="/assets/logo.png">
        <form class="password-recover__form" name="password-recover-form">
            <div class="signup__input-container">
                <input class="signup__text-input" type="email" name="email" placeholder="Inserisci la tua Email" required>
            </div>
            <div class="signup__input-container">
                <input class="signup__submit" type="submit" value="Recupera la password">
            </div>
            <div class="signup__input-container mt-3">
                <span>Vuoi recuperare la password? Inserisci semplicemente la tua email!</span>
            </div>
        </form>
    </div>
</div>

