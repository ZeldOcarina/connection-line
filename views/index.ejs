<section id="cta">
    <div class="cta">

        <div class="cta__form">
            <h2 class="cta__header mb-3">
                <%= content.form.header[0] %> <br><%= content.form.header[1] %>
            </h2>
            <form action="#" class="form">
                <div class="form__group">
                    <input type="text" class="form__input" placeholder="<%= content.form.name %>" id="name" required>
                    <label for="name" class="form__label"><%= content.form.name %></label>
                </div>

                <div class="form__group">
                    <input type="email" class="form__input" placeholder="<%= content.form.email %>" id="email" required>
                    <label for="email" class="form__label"><%= content.form.email %></label>
                </div>
                <div class="form__group">
                    <input type="text" class="form__input" placeholder="<%= content.form.phone %>" id="telefono">
                    <label for="telefono" class="form__label"><%= content.form.phone %></label>
                </div>
                <div class="form__group">
                    <textarea type="email" class="form__input" id="richiesta"
                        placeholder="<%= content.form.richiesta.richiestaLabel %>" rows="6" required></textarea>
                    <label for="richiesta" class="form__label"><%= content.form.richiesta.richiestaTextarea %></label>
                </div>
                <div class="form__checkbox-group">
                    <input type="checkbox" class="form__checkbox-input" id="privacy" name="privacy_accepted">
                    <label for="privacy" class="form__checkbox-label">
                        <span class="form__checkbox-button"></span>
                        <%= content.form.privacyConsent %>
                    </label>
                </div>
                <div class="form__checkbox-group">
                    <input type="checkbox" class="form__checkbox-input" id="newsletter" name="newsletter_accepted">
                    <label for="newsletter" class="form__checkbox-label">
                        <span class="form__checkbox-button"></span>
                        <%= content.form.newsletterConsent %>
                    </label>
                </div>
                <div class="form__group">
                    <button class="btn btn--primary mt-1"><%= content.form.cta %></button>
                </div>
            </form>
        </div>
    </div>
</section>


